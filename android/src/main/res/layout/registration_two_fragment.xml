<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical|center_horizontal"
        android:padding="16dp">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/registration_two_title"
            android:layout_marginBottom="5dp"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/registration_two_details"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/registration_email"
            android:layout_gravity="center_horizontal"
            android:hint="@string/registration_email_hint"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/registration_next_btn"
            android:id="@+id/submit_step_two"
            android:layout_gravity="end"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="35dp"
            android:gravity="center_horizontal">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="15dp"
                android:layout_height="match_parent"
                android:background="@drawable/registration_circle_shape"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="15dp"
                android:layout_height="match_parent"
                android:background="@drawable/registration_circle_shape_active"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="15dp"
                android:layout_height="match_parent"
                android:background="@drawable/registration_circle_shape"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="15dp"
                android:layout_height="match_parent"
                android:background="@drawable/registration_circle_shape"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="15dp"
                android:layout_height="match_parent"
                android:background="@drawable/registration_circle_shape"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">
        </LinearLayout>
    </LinearLayout>
</LinearLayout>