<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_vertical|center_horizontal"
              android:padding="16dp">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Enter your phone number"
            android:id="@+id/textView7"
            android:textColor="#fff"
            android:layout_marginBottom="5dp"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginTop="15dp" android:layout_marginBottom="15dp">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Country"
                    android:id="@+id/textView" android:textSize="10sp"/>
            <Spinner
                    android:layout_width="65dp"
                    android:layout_height="match_parent"
                    android:spinnerMode="dropdown"
                    android:id="@+id/registration_country_spinner" android:padding="0dp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:ems="10"
                    android:id="@+id/registration_phone_number"
                    android:layout_gravity="center_horizontal"
                    android:hint="Phone Number"

                    android:layout_marginTop="11dp"/>
        </LinearLayout>
    </LinearLayout>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NEXT"
            android:id="@+id/submit_step_four"
            android:layout_gravity="end"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="15dp" android:layout_gravity="center_horizontal"
            android:layout_marginTop="35dp" android:gravity="center_horizontal">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="15dp"
                android:layout_height="match_parent"
                android:background="@drawable/registration_circle_shape"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="15dp"
                android:layout_height="match_parent"
                android:background="@drawable/registration_circle_shape"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="15dp"
                android:layout_height="match_parent"
                android:background="@drawable/registration_circle_shape"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="15dp"
                android:layout_height="match_parent"
                android:background="@drawable/registration_circle_shape_active"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="15dp"
                android:layout_height="match_parent"
                android:background="@drawable/registration_circle_shape"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">
        </LinearLayout>

    </LinearLayout>
</LinearLayout>