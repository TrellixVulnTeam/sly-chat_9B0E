<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:clickable="false"
                android:id="@+id/frameLayout">

    <WebView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/webView" android:layout_alignParentLeft="true" android:layout_marginLeft="0dp"
            android:layout_alignParentTop="true" android:layout_marginTop="0dp" android:visibility="visible"/>

    <LinearLayout
            android:id="@+id/splashImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2"
            android:orientation="vertical"
            android:background="#847c60">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal">
            <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:id="@+id/splashLogo"
                    android:background="@drawable/ic_launcher" android:layout_gravity="bottom"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:text="Encrypted."
                    android:id="@+id/textView"
                    android:gravity="center_horizontal" android:layout_gravity="center_horizontal|bottom"
                    android:textSize="50dp" android:fontFamily="serif" android:layout_marginBottom="5dp"/>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
