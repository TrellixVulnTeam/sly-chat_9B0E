<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:emjicon="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chat_node"
        android:layout_gravity="start">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:id="@+id/message_node_layout"
        android:background="?attr/themedReceivedBubbleColor">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">
            <hani.momanii.supernova_emoji_library.Helper.EmojiconTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    emjicon:emojiconSize="20dp"
                    android:id="@+id/message"
                    android:text="@string/chat_expired_message_text"
                    android:layout_gravity="end"
                    android:minWidth="50dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>