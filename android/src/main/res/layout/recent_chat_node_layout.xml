<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_bottom_fine"
                android:layout_gravity="center_horizontal">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text=""
                android:id="@+id/recent_chat_contact_name"
                android:layout_marginStart="5dp"
                android:textSize="15sp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text=""
                android:id="@+id/recent_chat_contact_message"
                android:layout_below="@+id/recent_chat_contact_name"
                android:layout_alignParentTop="false"
                android:layout_marginStart="15dp"
                android:textSize="13sp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text=""
                android:id="@+id/recent_chat_contact_time"
                android:layout_below="@+id/recent_chat_contact_name"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:textSize="12sp"/>

</RelativeLayout>